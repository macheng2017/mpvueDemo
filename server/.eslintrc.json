{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "space-before-function-paren": ["error", "never"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "arrow-parens": 0,
    "generator-star-spacing": 0
  },
  "env": {
    "mocha": true
  }
}
